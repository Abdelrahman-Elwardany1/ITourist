<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".UI.GeneralPage.ProfileViewPagerFragments.GuideToursFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Personal tours"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#597A76" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ProfileGuideToursRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:paddingBottom="40dp"
        android:layout_marginTop="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="260dp"
        android:text="Work tours"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#597A76" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ProfileGuideWorkRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:paddingBottom="40dp"
        android:layout_marginTop="290dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</FrameLayout>