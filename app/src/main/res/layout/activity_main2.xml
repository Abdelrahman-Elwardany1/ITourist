<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <com.google.android.material.circularreveal.CircularRevealRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <RadioGroup
            android:id="@+id/RadioGroupMainOptionsView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"

            >

            <RadioButton
                android:id="@+id/HomeRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/radio_selector"
                android:button="@android:color/transparent"
                android:checked="true"
                android:layout_marginHorizontal="10dp"
                android:drawableStart="@drawable/home_icon_selector"
                android:drawablePadding="8dp"
                android:padding="12dp"
                android:text="Home"
                android:textColor="@color/white" />

            <RadioButton
                android:id="@+id/SearchRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/radio_selector"
                android:button="@android:color/transparent"
                android:drawableStart="@drawable/search_icon_selector"
                android:drawablePadding="8dp"
                android:layout_marginHorizontal="10dp"
                android:gravity="center"
                android:padding="12dp"
                android:textColor="@color/white" />

            <RadioButton
                android:id="@+id/ProfileRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/radio_selector"
                android:button="@android:color/transparent"
                android:drawableStart="@drawable/profile_icon_selector"
                android:layout_marginHorizontal="10dp"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:padding="12dp"
                android:textColor="@color/white" />

            <RadioButton
                android:id="@+id/ChatRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/radio_selector"
                android:button="@android:color/transparent"
                android:drawableStart="@drawable/chat_icon_selector"
                android:drawablePadding="8dp"
                android:layout_marginHorizontal="10dp"
                android:gravity="center"
                android:padding="12dp"
                android:textColor="@color/white" />

        </RadioGroup>
    </com.google.android.material.circularreveal.CircularRevealRelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>