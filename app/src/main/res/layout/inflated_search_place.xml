<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="20dp"
    android:layout_marginTop="12dp"
    android:layout_marginBottom="7dp"
    android:clickable="true"
    android:focusable="true"
    android:background="?attr/selectableItemBackground"
    >

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/SearchResPlaceNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/dm_sans"
        android:letterSpacing="0.05"

        android:gravity="center|start"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/SearchResCityCountryNameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center|start"

        android:letterSpacing="0.1"
        android:textColor="#8C8C8C"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@id/SearchResDistanceTextView"
        app:layout_constraintStart_toStartOf="@+id/SearchResPlaceNameTextView"
        app:layout_constraintTop_toBottomOf="@id/SearchResPlaceNameTextView" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/SearchResDistanceTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_medium"
        android:letterSpacing="0.1"
        android:layout_marginStart="5dp"
        android:gravity="center|start"
        android:textColor="#8C8C8C"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/SearchResPlaceNameTextView"/>


</androidx.constraintlayout.widget.ConstraintLayout>